<%= render "shared/header" %>

<div class='item-contents'>
  <%= form_with(url: search_items_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>
  <% end %>

  <div class = contents-row >
    <ul class='item-lists'>
      <% @items.each do |item| %>
            <li class='list'>
                <%= link_to item_path(item.id), method: :get do %>
                  <%= image_tag(item.image, class:"post-image") %>
                <% end %>
            </li>
      <% end %>
    </ul>
  </div>

  <%= link_to(new_item_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'camera_icon.png' , size: '185x50' ,class: "purchase-btn-icon" %>
  <% end %>
</div>