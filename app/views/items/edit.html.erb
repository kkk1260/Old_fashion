<div class="items-contents">

  <div class="items-main">
    <h2 class="items-title">投稿情報を編集</h2>
    <%= form_with(model: @item, local: true) do |f| %>
    
      <%= render 'shared/error_messages', model: f.object %>
  
      <div class="image-upload">
        <div class="weight-bold-text">
          投稿画像
          <span class="indispensable">必須</span>
        </div>
        <div class="click-upload">
        <%# 投稿写真選択 %>
          <p>
            クリックしてファイルをアップロード
          </p>
          <%= f.file_field :image, id:"preview-image" %>
        </div>
      </div>
      <div id="image-list"></div>
      
      <div class="new-items">
        <div class="weight-bold-text">
          タイトル
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field  :title, class:"items-text", id:"item-name", placeholder:"(例)アイテムやコーデの名前など", maxlength:"40" %>
  
        <div class="form">
          <div class="weight-bold-text">
            カテゴリー
            <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        </div>
  
        <div class="weight-bold-text">
          タグ<br>
          (半角スペースを入力することでタグをつけることができます)
        </div>
        <%= f.text_field  :tag_name, class:"items-text", id:"item-name", placeholder:"(例)ストリート系 きれいめ モード など", maxlength:"40", value: @item_tags%>
  
        <div class="items-explain">
          <div class="weight-bold-text">
            アイテム、コーデについて
          </div>
          <%= f.text_area :information, size: "20x5", class:"items-text", id:"item-info", placeholder:"(例)どんなアイテムか？、どんなコーデか？", maxlength:"1000" %>
        </div>
    </div>
  
    <div class="btn-contents">
      <%= f.submit "投稿する" ,class:"post-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
  <% end %>
</div>